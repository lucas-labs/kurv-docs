---
import BaseHead from '../components/BaseHead.astro';
import { ViewTransitions } from 'astro:transitions';

type Props = {
    title: string
    description: string
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <ViewTransitions />
  </head>
  <slot />
</html>
